package day2.assignment_last;
public class Main{
    public static void main(String[] args) {
        // Creating an Employee object
        Employee employee = new Employee("Alice", 101, 50000.00);

        // Creating an Invoice object
        Invoice invoice = new Invoice("P123", "Laptop Battery", 10, 1500.00);

        // Testing Employee payment details
        employee.getPayment();

        System.out.println("-----------------------------");

        // Testing Invoice payment details
        invoice.getPayment();
    }
}

